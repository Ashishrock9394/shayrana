<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/header') %>
    <title>Profile</title>
  </head>
  <body style="background-color: #1f242d; color: #fff;">
    <%- include('./partials/nav') %>

    <div class="container mt-4">
      <h1 class="text-white mb-4">My Profile</h1>

      <div class="card bg-dark text-white p-4">
        <div class="d-flex align-items-center gap-4">
          <img src="<%= user.profileImageURL || '/uploads/defaultProfileImage.jpg' %>" alt="Profile Image" class="rounded-circle" width="120" height="120" style="object-fit: cover;" />
          <div>
            <h3><%= user.fullName %></h3>
            <p><strong>Email:</strong> <%= user.email %></p>
          </div>
        </div>
      </div>
    </div>

    <%- include('./partials/footer') %>
    <%- include('./partials/scripts') %>
  </body>
</html>
