<!DOCTYPE html>
<html lang="en">
  <head>
    <%- include('./partials/header') %>
    <title>Profile</title>
    <style>
      .profile-container {
        max-width: 400px;
        margin: 5rem auto;
        background-color: #2c2f3f;
        padding: 2rem;
        border-radius: 20px;
        box-shadow: 0 0 25px rgba(0, 255, 255, 0.6); /* Aqua shadow */
        text-align: center;
      }
      .profile-img {
        width: 150px;
        height: 150px;
        object-fit: cover;
        border-radius: 50%;
        border: 4px solid aqua;
        margin-bottom: 1rem;
      }
      .profile-title {
        font-size: 1.8rem;
        color: aqua;
        margin-bottom: 1rem;
      }
      .profile-email {
        font-size: 1rem;
        color: #ccc;
      }
    </style>
  </head>
  <body style="background-color: #1f242d; color: #fff;">
    <%- include('./partials/nav') %>

    <div class="container">
      <h1 class="text-center mt-4" style="color: aqua;">My Profile</h1>
      <div class="profile-container">
        <img
          src="<%= user.profileImageURL || '/uploads/defaultProfileImage.jpg' %>"
          class="profile-img"
          alt="Profile Image"
        />
        <h1 class="profile-title"><%= user.fullName %></h1>
        <p class="profile-email"><strong>Email:</strong> <%= user.email %></p>
      </div>
    </div>

    <%- include('./partials/footer') %>
    <%- include('./partials/scripts') %>
  </body>
</html>
