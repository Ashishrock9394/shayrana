<script>
      function searchContent() {
        const input = document.getElementById('searchInput').value.toLowerCase();
        const contentBlocks = document.querySelectorAll('.searchable'); // Use this class on anything you want to filter
    
        contentBlocks.forEach(block => {
          const text = block.innerText.toLowerCase();
          block.style.display = text.includes(input) ? '' : 'none';
        });
      }
    </script>    